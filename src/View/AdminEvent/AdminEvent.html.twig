{% extends 'admin_layout.html.twig' %}

{% block stylesheetGrandChild %}
	<link rel="stylesheet" href="/assets/css/card.css"/>
{% endblock %}

{% block content%}
	<h1 class="text-center my-4 mb-5">Évènement</h1>
	<div class="d-grid gap-2 col-4 mx-auto my-4">
		<button class="btn btn-success d-flex justify-content-center align-items-center gap-2" type="button">
			<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#FAFAFD" class="bi bi-plus-circle-fill addButton" viewbox="0 0 16 16">
				<path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z"/>
			</svg>
			Ajouter
		</button>

	</div>
	{% for event in events %}
		<div class="row my-5 justify-content-around g-0">
			<div class="admin-view-card col-9 card container-xxl">
				<div class="row g-0">
					<div class="col-md-8">
						<div class="card-body">
							<h2 class="card-title fs-3">{{event.title}}</h2>
							<h3 class="card-title fs-3">
								{{event.courseType}}
							</h3>
							<h3 class="card-title fs-3">
								{{event.raceDate}}
							</h3>
							<p class="card-text fs-5">{{ event.paragraph }}</p>
						</div>
					</div>
					<div class="col-md-4">
						<img src="{{'/assets/upload/'~event.imgPath is null ? "/assets/images/Card1.jpeg" : event.imgPath}}" class="img-fluid rounded-start cardImg col-12" alt="Image de carte de l'evenement">
					</div>
				</div>
			</div>
			<div class="admin-right-buttons col-1 d-flex flex-column justify-content-center">
				<div class="d-grid gap-2 col-4 mx-auto my-2">
					<button class="btn btn-outline-primary d-flex justify-content-center align-items-center gap-2" type="button">
						<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#1F1CC6" class="bi bi-pencil" viewbox="0 0 16 16">
							<path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
						</svg>
						Éditer
					</button>

				</div>
				<div class="d-grid gap-2 col-4 mx-auto my-2">
					<button class="btn btn-danger d-flex justify-content-center align-items-center gap-2" type="button">
						<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#FAFAFD" class="bi bi-trash3" viewbox="0 0 16 16">
							<path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z"/>
						</svg>
						Supprimer
					</button>
				</div>
			</div>
		</div>
	{% endfor %}
{% endblock %}
