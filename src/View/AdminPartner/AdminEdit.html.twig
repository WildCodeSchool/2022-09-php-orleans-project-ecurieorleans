{% extends 'admin_layout.html.twig' %}

{% block stylesheetGrandChild %}{% endblock %}

{% block content %}
<h1 class="text-center my-5 mb-5">Modifier le partenaire {{partner.name}}</h1>
<div class="d-grid gap-2 mx-auto my-4">
</div>
{% if errors %}
<div class="d-flex justify-content-center flex-column align-items-center">
	<svg xmlns=" http://www.w3.org/2000/svg" width=" 120" height=" 120" fill=" #FF0000"
		class=" bi bi-exclamation-triangle py-2" viewbox=" 0 0 16 16">
		<path
			d="M7.938 2.016A.13.13 0 0 1 8.002 2a.13.13 0 0 1 .063.016.146.146 0 0 1 .054.057l6.857 11.667c.036.06.035.124.002.183a.163.163 0 0 1-.054.06.116.116 0 0 1-.066.017H1.146a.115.115 0 0 1-.066-.017.163.163 0 0 1-.054-.06.176.176 0 0 1 .002-.183L7.884 2.073a.147.147 0 0 1 .054-.057zm1.044-.45a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566z" />
		<path
			d="M7.002 12a1 1 0 1 1 2 0 1 1 0 0 1-2 0zM7.1 5.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995z" />
	</svg>
	{% for error in errors %}
	<ul class="errors text-center text-danger fs-5">
		<li>{{ error }}</li>
	</ul>
	{% endfor %}
</div>
{% endif %}
<form action="" method="POST" id="edit-sports" enctype="multipart/form-data">
	<input type="hidden" value="{{ partner.id }}" name="id">
	<div class="row admin-form m-auto my-4 p-2 w-75">
		<div class="mb-3 col-9">
			<label for="section-title" class="form-label">Nom du Partenaire</label>
			<input type="text" name="name" class="form-control" id="name" value="{{ partner.name }}">
		</div>
		<div class="mb-3 col-3">
			<label for="section-header" class="form-label">Logo du Partenaire</label>
			<input class="form-control" type="file" id="logo" name="logo" value="{{ partner.logo }}"/>
		</div>
		<div class="mb-1 col-12 m-auto">
			<label for="section-presentation" class="form-label">URL du site Partenaire</label>
			<input type="text" name="URL" class="form-control" id="URL" value="{{ partner.URL }}">
		</div> 
	</div>
	<div class="d-flex justify-content-between w-75 m-auto">
		<button type="submit" class="btn btn-outline-success d-flex justify-content-start align-items-start gap-2">Valider</button>
		<button class="btn btn-outline-danger d-flex justify-content-end align-items-end gap-2" type="submit">
			<a href="/admin/partenaires/" class="admin-buttons text-danger">Annuler</a>
		</button>
	</div>
</form>
{% endblock %}