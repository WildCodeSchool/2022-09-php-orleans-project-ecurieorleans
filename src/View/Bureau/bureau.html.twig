{% extends 'visitor_layout.html.twig' %}

{% block stylesheetGrandChild %}

	<link rel="stylesheet" href="/assets/css/bureau.css"/>

{% endblock %}

{% block header %}
	<header>
		<div class="yellow-spacer bg-secondary"></div>
		<div class="header-container d-flex justify-content-center flex-column align-items-center text-center text-light">
			<h1 class="headerTitle">
				Le bureau
			</h1>
			<div class="arrows-container d-flex flex-column mt-5">
				<svg viewbox="0 0 24 24" class="arrow-down bounce">
					<path fill-rule="evenodd" fill="#1F1CC6" clip-rule="evenodd" d="M18.5303 9.46967C18.8232 9.76256 18.8232 10.2374 18.5303 10.5303L12.5303 16.5303C12.2374 16.8232 11.7626 16.8232 11.4697 16.5303L5.46967 10.5303C5.17678 10.2374 5.17678 9.76256 5.46967 9.46967C5.76256 9.17678 6.23744 9.17678 6.53033 9.46967L12 14.9393L17.4697 9.46967C17.7626 9.17678 18.2374 9.17678 18.5303 9.46967Z" fill="#030D45"/>
				</svg>
				<svg viewbox="0 0 24 24" fill="#FFFFFF" class=" arrow-down bounce">
					<path fill-rule="evenodd" fill="#FFFFF" clip-rule="evenodd" d="M18.5303 9.46967C18.8232 9.76256 18.8232 10.2374 18.5303 10.5303L12.5303 16.5303C12.2374 16.8232 11.7626 16.8232 11.4697 16.5303L5.46967 10.5303C5.17678 10.2374 5.17678 9.76256 5.46967 9.46967C5.76256 9.17678 6.23744 9.17678 6.53033 9.46967L12 14.9393L17.4697 9.46967C17.7626 9.17678 18.2374 9.17678 18.5303 9.46967Z" fill="#030D45"/>
				</svg>
				<svg viewbox="0 0 24 24" class="arrow-down bounce">
					<path fill-rule="evenodd" fill="#1F1CC6" clip-rule="evenodd" d="M18.5303 9.46967C18.8232 9.76256 18.8232 10.2374 18.5303 10.5303L12.5303 16.5303C12.2374 16.8232 11.7626 16.8232 11.4697 16.5303L5.46967 10.5303C5.17678 10.2374 5.17678 9.76256 5.46967 9.46967C5.76256 9.17678 6.23744 9.17678 6.53033 9.46967L12 14.9393L17.4697 9.46967C17.7626 9.17678 18.2374 9.17678 18.5303 9.46967Z" fill="#030D45"/>
				</svg>
			</div>
		</div>
		<div class="yellow-spacer bg-secondary"></div>
	</header>
{% endblock %}

{% block content %}
	<body>
		<section class="section-bureau mt-5">
			<div class="titleContentLight">
				<h2 class="titleLight text-primary text-center py-2">Les membres du bureau</h2>
			</div>
			<div class="row g-3 mx-0">
				<img src="assets/images/bureau_members.png" alt="a photo of the members of the bureau" class="bureau-image col-md-5 col-sm-12">
				<div class="row col-sm-12 col-md-7 g-3 justify-content-center">
					{% for member in members %}
						{% if member.is_board_member == 1 %}
							<div class="col-md-5 card mx-2 border border-primary">
								<div class="card-body d-flex align-items-center">
									<div class="px-2">
										<svg xmlns="http://www.w3.org/2000/svg" width="60" height="80" fill="#1F1CC6" class="bi bi-person" viewbox="0 0 16 16">
											<path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0Zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4Zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10Z"/>
										</svg>
									</div>
									<div class="d-flex flex-column">
										<h3 class="card-title">{{member.role}}</h5>
										<p class="card-text">{{member.gender ~ ' ' ~ member.firstname ~ ' ' ~ member.lastname}}</p>
									</div>
								</div>
							</div>
						{% endif %}
					{% endfor %}
				</div>
			</div>
		</section>
		<section class="section-bureau">
			<div class="titleContentLight mt-5">
				<h2 class="titleLight text-primary text-center py-2">Le conseil d'administration</h2>
			</div>
			<div class="row bg-primary m-0">
				<img src="assets/images/conseil_admistration.png" alt="a photo of the members of the administration" class="admin-image col-md-5 col-sm-12 px-0">
				<div class="d-flex flex-wrap m-auto col-md-7 text-center py-2">
					{% for member in members %}
						<p class="admin-members text-light">{{member.firstname ~ ' ' ~ member.lastname}}</p>
					{% endfor %}
				</div>
			</div>
		</section>
	</body>
{% endblock %}
