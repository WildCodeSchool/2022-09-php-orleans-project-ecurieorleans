{% extends "admin_layout.html.twig"%}


{% block content %}
	<div class="d-flex justify-content-center align-items-center mt-5">
		<form class=" mt-5 d-flex flex-column justify-content-center align-items-center w-50 "method="post">
			<div class="form-group mb-3 w-75">
				<label for="exampleInputEmail1">Email address</label>
				<input type="email" class="form-control mb-3" name="email" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
			</div>
			<div class="form-group mb-3 w-75">
				<label for="exampleInputPassword1">Password</label>
				<input type="password" class="form-control mb-3" name="password" id="exampleInputPassword1" placeholder="Password">
				<button type="submit" class="btn btn-primary m-auto">Se connecter</button>
			</div>
		</form>
	</div>
{% endblock %}
